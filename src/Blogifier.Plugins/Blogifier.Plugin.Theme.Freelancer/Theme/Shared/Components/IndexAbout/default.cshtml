@using Microsoft.Extensions.Options
@inject IOptions<FreelancerThemeSettings> _settings
@model dynamic

<!-- About Section-->
<section class="page-section bg-primary text-white mb-0" id="about">
    <div class="container">
        <!-- About Section Heading-->
        <h2 class="page-section-heading text-center text-uppercase text-white">@Model.title</h2>
        <!-- Icon Divider-->
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- About Section Content-->
        <div class="row">
            <div class=" @(Model.column2==null? "col-lg-8 me-auto":"col-lg-4") ms-auto">
                <div class="lead">
                    @Html.Raw(Model.column1)
                </div>
            </div>
            @if (Model.column2 != null)
            {
                <div class="col-lg-4 me-auto">
                    <div class="lead">
                        @Html.Raw(Model.column2)
                    </div>
                </div>
            }

        </div>

        @if (!string.IsNullOrWhiteSpace(_settings.Value.AboutSectionCallToAction))
        {
            <!-- About Section Button-->

            <div class="text-center mt-4">
                <a class="btn btn-xl btn-outline-light" href="@_settings.Value.AboutSectionLink">
                    @if (!string.IsNullOrWhiteSpace(_settings.Value.AboutSectionIcon))
                    {
                        <i class="fas @_settings.Value.AboutSectionIcon fa-download me-2"></i>
                    }

                    @_settings.Value.AboutSectionCallToAction
                </a>
            </div>
        }
    </div>

</section>
