@using Microsoft.Extensions.Options
@inject IOptions<FreelancerThemeSettings> options
@model dynamic
@{
    var settings = options.Value;
}

<footer class="footer text-center">
    <div class="container">
        <div class="row">
            <!-- Footer Location-->
            <div class="col-lg-4 mb-5 mb-lg-0">
                @Html.Raw(Model.column1)
            </div>
            <!-- Footer Social Icons-->
            <div class="col-lg-4 mb-5 mb-lg-0">
                <h4 class="text-uppercase mb-4">Around the Web</h4>
                @if (!string.IsNullOrWhiteSpace(settings.SocialFacebook))
                {
                    <a class="btn btn-outline-light btn-social mx-1" href="@settings.SocialFacebook"><i class="fab fa-fw fa-facebook-f"></i></a>
                }
                @if (!string.IsNullOrWhiteSpace(settings.SocialTwitter))
                {
                    <a class="btn btn-outline-light btn-social mx-1" href="@settings.SocialTwitter"><i class="fab fa-fw fa-twitter"></i></a>
                }
                @if (!string.IsNullOrWhiteSpace(settings.SocialLinkedIn))
                {
                    <a class="btn btn-outline-light btn-social mx-1" href="@settings.SocialLinkedIn"><i class="fab fa-fw fa-linkedin-in"></i></a>
                }
                @if (!string.IsNullOrWhiteSpace(settings.SocialDribble))
                {
                    <a class="btn btn-outline-light btn-social mx-1" href="@settings.SocialGithub"><i class="fab fa-fw fa-dribbble"></i></a>
                }
                @if (!string.IsNullOrWhiteSpace(settings.SocialGithub))
                {
                    <a class="btn btn-outline-light btn-social mx-1" href="@settings.SocialDribble"><i class="fab fa-fw fa-github"></i></a>
                }
            </div>
            <!-- Footer About Text-->
            <div class="col-lg-4">
                @Html.Raw(Model.column2)
            </div>
        </div>
    </div>
</footer>
