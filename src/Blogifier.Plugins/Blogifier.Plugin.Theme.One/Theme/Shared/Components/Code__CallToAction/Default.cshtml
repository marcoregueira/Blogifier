@using Blogifier.Core.Web
@using Blogifier.Plugin.Theme.One
@using Blogifier.Plugin.Theme.One.Widgets;
@using Microsoft.Extensions.Options
@model CallToAction.CallToActionArguments
@inject ILayoutProvider _layout
@inject IOptions<OneThemeSettings> _settings

@if (_settings.Value.PageStartWidgetSampleEnabled)
{
    <!-- page header widget enabled -->
}

<p class="call_to_action">
    <a class="button" href="@Model.Target">
        @Model.Title
        @if (Model.ShowIcon)
        {
            <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"></path>
            </svg>
        }
    </a>
</p>
